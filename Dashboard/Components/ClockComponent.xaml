<comp:ClockComponentBase
    x:Class="Dashboard.Components.ClockComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:Dashboard"
    xmlns:comp="clr-namespace:Dashboard.Components"
    xmlns:con="clr-namespace:Dashboard.Controllers"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Background="Transparent"
    FontFamily="{DynamicResource MaterialDesignFont}"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="500"
    
    
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Width="500"
    Height="200">
    <!-- TODO: a proper way to position components-->
    
    
    
    <Viewbox
        Stretch="Uniform">
        <Grid
            Width="500"
            Height="200">
            <TextBlock
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Style="{DynamicResource MaterialDesignHeadline1TextBlock}"
                Text="{Binding Path=Time, StringFormat={}{0:HH:mm:ss}}">
            </TextBlock>
        </Grid>
    </Viewbox>
</comp:ClockComponentBase>
